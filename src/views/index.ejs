<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        a{
            text-decoration: none;
            display: block;
        }
        body{
            overflow-x: hidden;
        }
        .dadArchivos{
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
        }
        .dadArchivos .childArchivo{
            min-width: 250px;
            width: 300px;
            margin: 10px;
            color: #fff;
            background: #09f;
            display: flex !important;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 15px 5px;
            transition: all 500ms ease;
            max-height: 150px;
            height: 150px;
            overflow-x: hidden;
            overflow-y: auto;
            text-align: center;
        }
        .dadArchivos .childArchivo:hover{
            background: #07f;
        }
        form{
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
        form .input{
            width: 30%;
            text-align: center;
            position: relative;
            margin: 30px 0px;
        }
        form input{
            position: relative;
            z-index: 10;
            padding: 15px 10px;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            background: #fff;
            cursor: pointer;
        }
        form input:hover ~ #subir{
            background: #69f;
        }
        form .input #subir{
            position: absolute;
            padding: 15px 10px;
            z-index: -1;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #48e;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        form button{
            display: block;
            border: none;
            color: #fff;
            background: #248;
            width: 30%;
            padding: 15px 5px;
            font-size: 18px;
            cursor: pointer;
        }
        form button:hover{
            background: #026;
        }
        h1{
            font-size: 5em;
            font-weight: 200;
            padding: 15px 10px;
            text-align: center;
        }
        .archivos{
            font-size: 3em;
            font-weight: 70;
            text-align: center;
            padding: 15px 10px
        }
        #data-file{
            margin-bottom: 30px;
            display: none;
        }
    </style>
</head>
<body>
    <h1>Plataforma</h1>
    <form action="/api-rest/add" method="post" id="formAdd" enctype="multipart/form-data">
        <div class="input">
            <input type="file" name="archivo" id="archivo">
            <span id="subir">Subir un archivo</span>
        </div>
        <p id='data-file'></p>
        <button>Send</button>
        <% if(typeof message != "undefined"){ %>
            <h2><%= message %></h2>
            <script>
                setTimeout(() => {
                    window.location.pathname = '/';
                }, 1000);
            </script>
        <%} %>
    </form>
    <h2 class="archivos">Archivos:</h2>
    <% if(typeof datos != "undefined"){ %>
        <div class="dadArchivos">
                <% datos.forEach((data, index) => { %>
                    <% if(exts[index] == '.jpg' || exts[index] == '.png' || exts[index] == '.gif' || exts[index] == '.jpeg' || exts[index] == '.pdf'){ %>
                        <a href='/open/<%= data.ID %>' class="childArchivo">
                            <h2><%= data.ID %></h2>
                            <h2><%= data.originalname %></h2>
                            <p><%= data.fecha %></p>
                        </a>
                    <%}else{ %>
                        <a href='/open/<%= data.ID %>' download="<%= data.originalname %>" class="childArchivo">
                            <h2><%= data.ID %></h2>
                            <h2><%= data.originalname %></h2>
                            <p><%= data.fecha %></p>
                        </a>
                    <%} %>
                <%}) %>
        </div>
    <%} %>
    <script>
        document.querySelector('#formAdd input[type=file]').addEventListener('change', (e) => {
            document.querySelector('#data-file').style.display = 'block'
            document.querySelector("#data-file").innerText = e.target.files[0].name
        })
    </script>
</body>
</html>